---
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import WhatsAppButton from '@/components/WhatsAppButton.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Aberturas de aluminio a medida - Fabricación e instalación' } = Astro.props;
const apiUrl = import.meta.env.PUBLIC_CATALOG_API_URL;
const whatsappPhone = import.meta.env.PUBLIC_WHATSAPP_PHONE || '5491112345678';
const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL || 'contacto@aberturassapper.com';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Aberturas Sapper</title>
    <script is:inline set:html={`window.env = { PUBLIC_CATALOG_API_URL: "${apiUrl}", PUBLIC_WHATSAPP_PHONE: "${whatsappPhone}", PUBLIC_CONTACT_EMAIL: "${contactEmail}" };`}></script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <WhatsAppButton />
  </body>
</html>

<style>
  main {
    flex: 1;
    padding-top: var(--header-height);
  }
</style>
