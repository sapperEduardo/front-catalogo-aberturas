---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getWhatsAppPhone, getContactEmail } from '@/services/catalog';

const phone = getWhatsAppPhone();
const formattedPhone = phone.replace(/(\d{2})(\d{4})(\d{4})/, '$1 $2 $3');
const email = getContactEmail();
const whatsappUrl = `https://wa.me/${phone}`;
---

<BaseLayout title="Contacto" description="Contáctanos para consultas sobre aberturas de aluminio">
  <section class="contact-page">
    <div class="container">
      <h1 class="page-title">Contacto</h1>
      
      <div class="contact-grid">
        <div class="contact-info">
          <h2 class="section-title">¡Escríbenos!</h2>
          <p class="contact-text">
            Estamos disponibles para responder tus consultas. Completá el formulario 
            o escribinos directamente por WhatsApp.
          </p>
          
          <div class="contact-options">
            <a href={whatsappUrl} class="contact-option" target="_blank" rel="noopener noreferrer">
              <div class="option-icon whatsapp">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div class="option-content">
                <span class="option-label">WhatsApp</span>
                <span class="option-value">{formattedPhone}</span>
              </div>
            </a>
            
            <a href={`mailto:${email}`} class="contact-option">
              <div class="option-icon email">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="option-content">
                <span class="option-label">Email</span>
                <span class="option-value">{email}</span>
              </div>
            </a>
          </div>
        </div>

        <form class="contact-form" id="contact-form" name="contact">
          <div class="form-group">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" id="name" name="name" class="form-input" required />
          </div>
          
          <div class="form-group">
            <label for="email" class="form-label">Email o Teléfono</label>
            <input type="text" id="email" name="email" class="form-input" required />
          </div>
          
          <div class="form-group">
            <label for="message" class="form-label">Mensaje</label>
            <textarea id="message" name="message" class="form-input form-textarea" rows="5" required></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary btn-large" id="submit-btn">Enviar mensaje</button>
          <p class="form-status" id="form-status"></p>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>

<script is:inline>
  const form = document.getElementById('contact-form');
  const submitBtn = document.getElementById('submit-btn');
  const formStatus = document.getElementById('form-status');
  
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      submitBtn.disabled = true;
      submitBtn.textContent = 'Enviando...';
      
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      
      try {
        const response = await fetch('https://formspree.io/f/meellqdp', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify(data)
        });
        
        if (response.ok) {
          formStatus.textContent = '¡Mensaje enviado correctamente!';
          formStatus.className = 'form-status success';
          form.reset();
        } else {
          throw new Error('Error al enviar');
        }
      } catch (error) {
        formStatus.textContent = 'Error al enviar el mensaje. Intentalo nuevamente.';
        formStatus.className = 'form-status error';
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Enviar mensaje';
      }
    });
  }
</script>

<style>
  .contact-page {
    padding: var(--spacing-xl) 0;
  }

  .page-title {
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-lg);
    text-align: center;
  }

  .contact-grid {
    display: grid;
    gap: var(--spacing-xl);
  }

  .contact-info {
    text-align: center;
  }

  .section-title {
    font-size: var(--font-size-lg);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .contact-text {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
  }

  .contact-options {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .contact-option {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md);
    background-color: var(--color-bg-alt);
    border-radius: var(--border-radius);
    transition: background-color var(--transition-fast);
  }

  .contact-option:hover {
    background-color: var(--color-border);
  }

  .option-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .option-icon.whatsapp {
    background-color: #25d366;
    color: white;
  }

  .option-icon.email {
    background-color: var(--color-secondary);
    color: white;
  }

  .option-content {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .option-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
  }

  .option-value {
    font-weight: 500;
    color: var(--color-text);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background-color: var(--color-bg-alt);
    border-radius: var(--border-radius);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-label {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text);
  }

  .form-input {
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-base);
    background-color: var(--color-bg);
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .btn-large {
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: var(--font-size-lg);
  }

  .form-status {
    text-align: center;
    padding: var(--spacing-sm);
    border-radius: var(--border-radius-sm);
  }

  .form-status.success {
    color: #27ae60;
    background-color: rgba(39, 174, 96, 0.1);
  }

  .form-status.error {
    color: #e74c3c;
    background-color: rgba(231, 76, 60, 0.1);
  }

  @media (min-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr 1fr;
      align-items: start;
    }

    .contact-info {
      text-align: left;
    }

    .contact-options {
      flex-direction: row;
    }

    .contact-option {
      flex: 1;
    }
  }
</style>
